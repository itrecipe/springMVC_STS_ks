<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.board.mapper.BoardAttachMapper">

	<insert id="insert">
		<![CDATA[
		INSERT INTO tbl_attach (uuid, uploadpath, filename,
		filetype, bno)
		VALUES (#{uuid}, #{uploadPath}, #{fileName},
		#{fileType}, #{bno})
		]]>
	</insert>

	<delete id="delete">
		<![CDATA[
		DELETE FROM tbl_attach WHERE uuid = #{uuid}
		]]>
	</delete>
	
	<delete id="deleteAll">
		<![CDATA[
		DELETE FROM tbl_attach WHERE bno = #{bno}
		]]>
	</delete>

	<select id="findByBno"
		resultType="com.exam.board.domain.BoardAttachVO">
		<![CDATA[
		SELECT * FROM tbl_attach WHERE bno = #{bno}
		]]>
	</select>
	
	<select id="getOldFiles"
		resultType="com.exam.board.domain.BoardAttachVO">
		<![CDATA[
		SELECT * FROM tbl_attach 
		WHERE uploadpath = DATE_FORMAT(DATE_SUB(NOW(), INTERVAL 1 DAY), '%Y/%m/%d')
		]]>
	</select>
</mapper>